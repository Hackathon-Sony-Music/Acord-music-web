<body class="auth-fluid-pages pb-0">
  <div class="auth-fluid">
    <div class="auth-fluid-form-box">
      <div class="align-items-center d-flex h-100">
        <div class="card-body">

          <div class="auth-brand text-center text-lg-left">
            <a href="index.html">
              <span><img src="assets/images/logo-light.png" alt="" height="18"></span>
            </a>
          </div>

          <h2 class="mt-0" style="text-align: center;color: #fff;">Me da um Sinal</h2>

          <br><br>
          <h3 class="mt-0" style="text-align: center;color: #fff;">Cadastrar-se</h3>

          <div class="card-body p-4">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <% if f.error_notification.present? %>
                  <div class="text-center w-75 m-auto">
                    <%= f.error_notification %>
                  </div>
                <% end %>

              <div class="form-group">
                <%= f.input :email,
                            required: false,
                            input_html: { autocomplete: "email", class: 'form-control', placeholder:"Digite seu email" } %>
              </div>

              <div class="form-group">
                <%= f.input :password,
                            label: "Senha",
                            required: false,
                            input_html: { autocomplete: "current-password", class: 'form-control', placeholder:"Digite sua Senha" } %>
              </div>

              <div class="form-group">
                <%= f.input :password_confirmation,
                            label: "Confirmar Senha",
                            required: false,
                            input_html: { autocomplete: "current-password", class: 'form-control', placeholder:"confirme sua Senha" } %>
              </div>

              <div class="form-group mb-0 text-center">
                <button class="btn btn-primary btn-block" type="submit" style="border-radius: 32px;">
                  Cadastrar-se
                </button>
              </div>

              <div class=" mt-3 form-group mb-0 text-center">
                <%= link_to  new_user_session_path, class:"btn btn-outline-dark btn-block" do %>
                  <i class="mdi mdi-login"></i> Acessar
                <% end %>
              </div>

            <% end %>
        </div>

      </div>
    </div>
  </div>

  <div class="auth-fluid-right text-center">
    <div class="auth-user-testimonial">
      <h2 class="mb-3">Comunicação, acessibilidade e conscientização.</h2>
      <p class="lead">
        <i class="mdi mdi-format-quote-open"></i>
        Apreenda Libras de maneira Fácil e Ágil.
        <i class="mdi mdi-format-quote-close"></i>
      </p>
      <p>
        Me da um Sinal
      </p>
    </div>
  </div>

</div>
</body>
