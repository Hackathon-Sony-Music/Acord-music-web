<body class="auth-fluid-pages pb-0">
  <div class="auth-fluid loguin">
    <div class="auth-fluid-form-box">
      <div class="align-items-center d-flex h-100">
        <div class="card-body">

          <div class="auth-brand text-center text-lg-left">
            <a href="index.html">
              <span><img src="assets/images/logo-light.png" alt="" height="18"></span>
            </a>
          </div>

          <div class="col-12">
              <h1 class="mt-0" style="text-align: center;color: #000;font-family: 'Andika'!important;padding-bottom: 0;margin-bottom: 0;">
                <span style="color: #AA13EB!important;font-size:47px;font-family: 'Barlow', sans-serif;">
                  Acord
                </span>
              </h1>
          </div>

          <div class="card-body p-4">

            <% if notice.present? or alert.present? %>
              <div class="text-center w-75 m-auto">
                <% if notice.present? %>
                  <p class="alert alert-warning"><%= notice %></p>
                <% end %>
                <% if alert.present? %>
                  <p class="alert alert-warning"><%= alert %></p>
                <% end %>
              </div>
            <% else %>
              <div class="text-center w-75 m-auto"></div>
            <% end %>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


            <div class="am-material-ui input">
                <div class="input">
                    <text1>Email</text1>
                    <%= f.text_field :email %>
                    <text2>Entre com seu email.</text2>
                </div>
            </div>


            <div class="am-material-ui input">
                <div class="input">
                    <text1>Senha</text1>
                    <%= f.text_field :password %>
                    <text2>Entre com sua Senha.</text2>
                </div>
            </div>

            <div class="form-group mb-3">
              <div class="custom-control custom-checkbox">
                <%= f.check_box :remember_me, class:"custom-control-input", id: "checkbox-signin", checked: "checked" %>
                <label class="custom-control-label" for="checkbox-signin" style="color: #AA13EB;">Lembrar-me</label>
              </div>
            </div>

            <div class="form-group mb-0 text-center">
              <button class="btn btn-primary btn-block" type="submit" style="border-radius: 32px;">
                <i class="mdi mdi-login"></i>
                Acessar</button>
            </div>

            <div class=" mt-3 form-group mb-0 text-center">
              <a  class="btn btn-outline-primary btn-block" style="border-radius: 32px;" href="/users/sign_up">
                Cadastre-se
              </a>
            </div>

          <% end %>
        </div>

      </div>
    </div>
  </div>

  <div class="auth-fluid-right text-center">
    <div class="auth-user-testimonial">
      <!-- <h2 class="mb-3">Comunicação, acessibilidade e conscientização.</h2>
      <p class="lead">
        <i class="mdi mdi-format-quote-open"></i>
        Apreenda Libras de maneira Fácil e Ágil.
        <i class="mdi mdi-format-quote-close"></i>
      </p>
      <p>
        Me da um Sinal
      </p> -->
    </div>
  </div>

</div>
</body>
