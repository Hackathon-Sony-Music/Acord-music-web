<body class="auth-fluid-pages pb-0">
  <div class="auth-fluid">
    <div class="auth-fluid-form-box">
      <div class="align-items-center d-flex h-100">
        <div class="card-body">

          <div class="auth-brand text-center text-lg-left">
            <a href="index.html">
              <span><img src="assets/images/logo-light.png" alt="" height="18"></span>
            </a>
          </div>

          <h2 class="mt-0" style="text-align: center;color: #fff;">Me da um Sinal</h2>

          <br><br>
          <h3 class="mt-0" style="text-align: center;color: #fff;">Acessar</h3>

          <div class="card-body p-4">

            <% if notice.present? or alert.present? %>
              <div class="text-center w-75 m-auto">
                <% if notice.present? %>
                  <p class="alert alert-warning"><%= notice %></p>
                <% end %>
                <% if alert.present? %>
                  <p class="alert alert-warning"><%= alert %></p>
                <% end %>
              </div>
            <% else %>
              <div class="text-center w-75 m-auto"></div>
            <% end %>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="form-group">
              <%= f.input :email, required: false, input_html: { style:"color: #fff;", autocomplete: "email", class: 'form-control', placeholder:"Entre com seu email" } %>
            </div>

            <div class="form-group">
              <%= link_to "Esqueceu?", new_password_path(resource_name), class:"text-muted float-right" %>
              <%= f.input :password, label: "Senha", required: false, input_html: { autocomplete: "current-password", class: 'form-control', placeholder:"Entre com sua Senha" } %>
            </div>

            <div class="form-group mb-3">
              <div class="custom-control custom-checkbox">
                <%= f.check_box :remember_me, class:"custom-control-input", id: "checkbox-signin", checked: "checked" %>
                <label class="custom-control-label" for="checkbox-signin">Lembrar-me</label>
              </div>
            </div>

            <div class="form-group mb-0 text-center">
              <button class="btn btn-primary btn-block" type="submit" style="border-radius: 32px;">
                <i class="mdi mdi-login"></i>
                Acessar</button>
            </div>

            <div class=" mt-3 form-group mb-0 text-center">
              <%= link_to "Cadastre-se", new_registration_path(resource_name), class:"btn btn-outline-dark btn-block" %>
            </div>

          <% end %>
        </div>

      </div>
    </div>
  </div>

  <div class="auth-fluid-right text-center">
    <div class="auth-user-testimonial">
      <h2 class="mb-3">Comunicação, acessibilidade e conscientização.</h2>
      <p class="lead">
        <i class="mdi mdi-format-quote-open"></i>
        Apreenda Libras de maneira Fácil e Ágil.
        <i class="mdi mdi-format-quote-close"></i>
      </p>
      <p>
        Me da um Sinal
      </p>
    </div>
  </div>

</div>
</body>
