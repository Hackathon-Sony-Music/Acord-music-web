<% if obj.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger" role="alert">
      <div class="row">
        <h4><i class="dripicons-wrong mr-2"></i><%= pluralize(obj.errors.count, "Erro(s)") %> encontrados</h4>
      </div>
        <ul>
          <% obj.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  </div>
<% end %>
