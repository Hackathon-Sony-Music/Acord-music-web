<!DOCTYPE html>
<html>
  <head>
    <title>Acord Music</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? && params[:controller] != 'registros' %>
      <% if current_user.tip_menu %>
        <%=  render "layouts/nav_bar_sony" %>
      <% else %>
        <%=  render "layouts/nav_bar" if !current_user.editor %>
        <%=  render "layouts/nav_bar_editora" if current_user.editor %>
      <% end %>
    <% end %>

    <%= yield %>

    <%=  render "layouts/flash_message" if user_signed_in? %>

    <link href="https://fonts.googleapis.com/css2?family=Caveat&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Andika&family=Didact+Gothic&family=Yeseva+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Barlow:ital,wght@1,800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
  </body>
</html>
