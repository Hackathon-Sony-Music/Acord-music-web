<div id="detached-topbar-placeholder"></div>

<div class="wrapper">
  <div class="content-page pb-0" style="min-height: 70vh;">
    <div class="content">
      <div class="container-fluid mt-3">
        <div class="row">
          <div class="col-md-12 col-xl-2 mr-5">
            <img src="<%= asset_path 'macaco_2.svg' %>" style="margin-left: -19vh;margin-top: -14vh;">
          </div>
          <div class="col-md-12 col-xl-9">
            <div class="progress mb-2">
                <div class="progress-bar bg-info" role="progressbar" style="width: 50%;background-color: #235390 !important;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
            </div>

            <div class="col-12">
              <h1 style="color:#000">Sinalise:</h1>
              <h3 class="ml-5" style="color:#000">Hoje está Chuvendo.</h3>
            </div>

            <div class="col-12 row">
              <div class="card mlr" style="width: 500px;height: 400px;">
                <div class="card-body">
                  <img class="image-center" src="<%= asset_path 'camera.svg' %>">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-12 m-0 pt-2" style="background-color:#E9A5A5;height: 12rem;">
    <div class="row ml-4" style="align-items: center;">
      <img src="<%= asset_path 'x.svg' %>" width="80">
      <label class="ml-2 p-0" style="margin-bottom: 0px;font-size:40px;color:#BE1414">Incorreto</label>
    </div>
    <div class="col-12 row mt-4">
      <div class="row ml-4" style="align-items: center;">
        <img src="<%= asset_path 'reportar_vermelho.svg' %>" width="30" style="color:#BE1414;">
        <label class="ml-2 p-0" style="margin-bottom: 0px;font-size:20px;color:#BE1414">Reportar</label>
      </div>
      <div class="row ml-4" style="align-items: center;">
        <img src="<%= asset_path 'comentario_vermelho.svg' %>" width="30" style="color:#BE1414;">
        <label class="ml-2 p-0" style="margin-bottom: 0px;font-size:20px;color:#BE1414">Comentar</label>
      </div>
      <div class="ml-4" style="margin-left:auto!important;">
        <%= link_to '/', class:"btn btn-secondary", style:"background-color:#BE1414;border-color: #BE1414;width: 13rem;border-radius: 23px;height: 37px;" do %>
          Avançar
        <% end %>
      </div>
    </div>

  </div>
</div>


<%= javascript_pack_tag 'dashboard.js' %>
